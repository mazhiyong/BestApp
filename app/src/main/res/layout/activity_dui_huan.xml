<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title_bar_view"
        style="@style/title_bar_style"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/left_back_lay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_10"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_arrow"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:contentDescription="@null"
                    />

                <TextView
                    android:id="@+id/back_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:gravity="center"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black" />
            </LinearLayout>

            <com.androidkun.xtablayout.XTabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_60"
                android:layout_marginRight="@dimen/dp_60"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                app:xTabIndicatorColor="@color/blue1"
                app:xTabDividerWidth="@dimen/dp_0"
                app:xTabDividerColor="@color/white"
                app:xTabDividerWidthWidthText="true"
                app:xTabSelectedTextColor="@color/blue1" />

            <LinearLayout
                android:id="@+id/right_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/right_text_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textSize="@dimen/sp_15"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/right_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_15"
                    android:visibility="gone"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:layout_alignParentBottom="true"
                android:background="@color/divide_line" />
        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/aviable_money_tv"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:textSize="@dimen/sp_text_26"
        android:text="兑换"
        android:paddingBottom="@dimen/dp_4"
        android:paddingRight="@dimen/dp_10"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/background_yuanhuan_gray"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/dp_8"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle_background_blue"
                android:layout_height="@dimen/dp_8" />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@drawable/circle_background_gray"
                android:layout_height="@dimen/dp_4" />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/circle_background_gray"
                android:layout_height="@dimen/dp_4" />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/circle_background_gray"
                android:layout_height="@dimen/dp_4" />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_width="@dimen/dp_8"
                android:background="@drawable/circle_background_red"
                android:layout_height="@dimen/dp_8" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/from_lay"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="从"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_15"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/from_tv"
                    android:layout_width="0dp"
                    android:text="请选择"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/from_iv"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:alpha="0.6"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@drawable/android_list_idex"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/to_lay"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="到"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_15"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/to_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="请选择"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/to_iv"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:alpha="0.6"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@drawable/android_list_idex"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_margin="@dimen/dp_1_5"
            android:background="@color/gray_light2"
            android:layout_width="@dimen/dp_50"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/change_iv"
                android:background="@drawable/circle_background"
                android:layout_width="@dimen/dp_28"
                android:text="兑"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textSize="@dimen/sp_14"
                android:layout_height="@dimen/dp_28" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/divide_line"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:layout_alignParentBottom="true"
        android:background="@color/divide_line" />
    <TextView
        android:visibility="gone"
        android:id="@+id/middle_money_tv"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_15"
        android:textSize="@dimen/sp_14"
        android:text="币种"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:paddingRight="@dimen/dp_10"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/type_lay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/type_tv"
            android:layout_width="0dp"
            android:text="请选择"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:alpha="0.6"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/android_list_idex"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:layout_alignParentBottom="true"
        android:background="@color/divide_line" />
    <TextView
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_15"
        android:textSize="@dimen/sp_14"
        android:text="数量"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:paddingRight="@dimen/dp_10"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/number_et"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:inputType="number"
            android:background="@null"
            android:hint="请输入兑换数量"
            android:textSize="@dimen/sp_13"
            android:paddingBottom="@dimen/dp_5"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/type2_tv"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="@dimen/sp_13"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/selectall_tv"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:text="全部"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_13"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:layout_alignParentBottom="true"
        android:background="@color/divide_line" />
    <TextView
        android:layout_marginTop="@dimen/dp_5"
        android:id="@+id/aviable_tv"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:text="可用 0.00"
        android:textColor="@color/gray"
        android:textSize="@dimen/sp_12"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/duihuanAcountlay"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text="可用指标:"
                    android:hint="未释放指标:"
                    android:textColor="@color/gray" />
                <TextView
                    android:id="@+id/jianglijin_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text="--"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textColor="@color/black" />
            </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_marginTop="@dimen/dp_10"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sp_14"
                   android:layout_gravity="center_vertical"
                   android:text="未释放指标:"
                   android:textColor="@color/gray" />
               <TextView
                   android:id="@+id/jifen_tv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sp_14"
                   android:text="--"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="@dimen/dp_15"
                   android:textColor="@color/black" />
           </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tipTv"
        android:background="@drawable/background_corners_gray_lightest"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="match_parent"
        android:lineSpacingExtra="@dimen/dp_5"
        android:text="兑换后系统即不退回，兑换后可释放一次1：3兑换平台币的指标"
        android:padding="@dimen/dp_15"
        android:textColor="@color/gray"
        android:textSize="@dimen/sp_12"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/huzhuan_tv"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_16"
        android:text="兑  换"
        android:enabled="false"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/dp_8"
        android:background="@drawable/btn_next"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />
</LinearLayout>